<header class="sticky top-0 z-30 backdrop-blur supports-[backdrop-filter]:bg-white/70 bg-white/90 border-b border-gray-200/70 dark:bg-[#0f1422]/70 dark:border-white/10 transition-transform duration-300">
        <div class="container mx-auto px-4 py-3 flex items-center gap-3 justify-between">
            <!-- Left Side: Menu + Logo -->
            <div class="flex items-center gap-3">
                <button id="sidebarToggle" class="lg:hidden px-3 py-2 rounded-xl bg-white ring-1 ring-gray-200 hover:bg-gray-50 dark:bg-gray-700 dark:ring-white/10 dark:hover:bg-gray-600" aria-label="Menu" style="min-width: 48px; min-height: 48px;">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <a href="{{ store.url }}" class="flex items-center gap-2" aria-label="Home" style="min-width: 48px; min-height: 48px;">
                    <span class="w-10 h-10 rounded-xl grid place-items-center bg-gradient-to-br from-[var(--accent-coral)] to-[var(--accent-orange-dark)] text-white shadow-coral">
                        <!-- Animated Logo -->
                        <div class="needsbox-logo">
                            <div class="needsbox-box">
                                <div class="needsbox-item needsbox-usb"></div>
                                <div class="needsbox-item needsbox-bulb"></div>
                                <div class="needsbox-item needsbox-headphones"></div>
                            </div>
                        </div>
                    </span>
                    <span class="font-extrabold text-[var(--primary-dark)] dark:text-white text-lg tracking-tight hidden sm:block">NEEDS BOXES</span>
                </a>
                <custom-main-menu></custom-main-menu>
            </div>
            <!-- Right Side: Search + Actions -->
            <div class="flex items-center gap-2">
                <div class="relative hidden md:block">
                    <salla-search inline oval height="36"></salla-search>
                </div>
                <button id="dirToggle" class="px-3 py-2 rounded-xl bg-white ring-1 ring-gray-200 hover:bg-gray-50 dark:bg-gray-700 dark:ring-white/10 dark:hover:bg-gray-600" aria-label="Toggle Language Direction" style="min-width: 48px; min-height: 48px;">RTL/LTR</button>
                <button id="themeToggle" class="px-3 py-2 rounded-xl bg-white ring-1 ring-gray-200 hover:bg-gray-50 dark:bg-gray-700 dark:ring-white/10 dark:hover:bg-gray-600" aria-label="Toggle Dark Mode" style="min-width: 48px; min-height: 48px;">
                    <i class="fa-solid fa-moon"></i>
                </button>
                {% if store.settings.is_multilingual or store.settings.currencies_enabled %}
    <button type='button' onclick="salla.event.dispatch('localization::open')" class="px-3 py-2 rounded-xl bg-white ring-1 ring-gray-200 hover:bg-gray-50 dark:bg-gray-700 dark:ring-white/10 dark:hover:bg-gray-600" style="min-width: 48px; min-height: 48px;">        <span class="flag iti__flag iti__{{ user.language.country_code }} rounded-sm"></span>        <span class="mx-1.5">|</span> <span>{{ currency.symbol }}</span>    </button>    <salla-localization-modal></salla-localization-modal>{% endif %}{% if store.scope %}
    <button class="px-3 py-2 rounded-xl bg-white ring-1 ring-gray-200 hover:bg-gray-50 dark:bg-gray-700 dark:ring-white/10 dark:hover:bg-gray-600" style="min-width: 48px; min-height: 48px;"            onclick="salla.event.dispatch('scopes::open', {'mode': 'default'})">        <i class="sicon-location rtl:ml-1 ltr:mr-1"></i> {{ store.scope.name }}    </button>{% endif %}{% if user.type=='user' %}
                    <salla-user-menu avatar-only show-header></salla-user-menu>
                {% else %}
                    <button class="header-btn" aria-label="user-icon" onclick="salla.event.dispatch('login::open')">
                        <i class="header-btn__icon sicon-user-circle"></i>
                    </button>
                {% endif %}
                <salla-cart-summary class="ml-4 rtl:ml-[unset] rtl:mr-4">
                    <i slot="icon" class="header-btn__icon icon sicon-shopping-bag"></i>
                </salla-cart-summary>
            </div>
        </div>
        <!-- Decorative bottom border -->
        <div class="h-[2px] bg-gradient-to-r from-[var(--primary-dark)] via-[var(--accent-coral)] to-[var(--primary-dark)]" aria-hidden="true"></div>
    </header>
    <!-- Sidebar (Mobile Menu) -->
    <div id="sidebarOverlay" class="sidebar-overlay" aria-hidden="true"></div>
    <aside id="sidebar" class="sidebar" aria-label="Site menu">
        <div class="p-4 border-b border-gray-200/70 dark:border-white/10 flex items-center justify-between">
            <h2 class="font-extrabold text-lg text-[var(--primary-dark)] dark:text-[var(--accent-coral)]">NEEDS BOXES</h2>
            <button id="sidebarClose" class="text-2xl" aria-label="Close" style="min-width: 48px; min-height: 48px;"><i class="fa-solid fa-xmark"></i></button>
        </div>
        <div class="p-4 space-y-3 overflow-y-auto">
            <div class="mb-2">
                <input id="mobileSearch" type="search" placeholder="ابحث…" class="w-full px-4 py-2.5 rounded-full border dark:border-white/10 dark:bg-gray-700 bg-white/90 focus:outline-none focus:ring-2 focus:ring-[var(--primary-blue)]" aria-label="Search" />
            </div>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#" style="min-height: 48px;">
                <i class="fa-solid fa-house w-5 text-center"></i> الرئيسية
            </a>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#categories" style="min-height: 48px;">
                <i class="fa-solid fa-th-large w-5 text-center"></i> التصنيفات
            </a>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#featured-products" style="min-height: 48px;">
                <i class="fa-solid fa-star w-5 text-center"></i> المميزة
            </a>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#all-products" style="min-height: 48px;">
                <i class="fa-solid fa-box-open w-5 text-center"></i> كل المنتجات
            </a>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#testimonials" style="min-height: 48px;">
                <i class="fa-solid fa-comment-dots w-5 text-center"></i> آراء العملاء
            </a>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#faq" style="min-height: 48px;">
                <i class="fa-solid fa-circle-question w-5 text-center"></i> الأسئلة
            </a>
            <a class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200 sidebar-link" href="#contact" style="min-height: 48px;">
                <i class="fa-solid fa-headset w-5 text-center"></i> تواصل
            </a>
        </div>
    </aside>